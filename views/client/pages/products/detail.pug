extends ../../layouts/default.pug

block main
  .product-detail
    .product-image
      img(src=product.thumbnail alt=product.title)
    .product-info
      h1= product.title
      if product.discountPercentage
        p 
          strong Giá khuyến mãi: 
          | #{product.priceNew}₫
        p 
          strong Giá gốc: 
          | #{product.price}₫
      else
        p 
          strong Giá: 
          | #{product.price}₫
      p 
        strong Mô tả: 
        | #{product.description}
      a(href="/") ← Quay lại danh sách
