header.header
  .container 
    .row.align-items-center 
      .col-3 
        .inner-logo 
          a(href="/")
            img(src="/images/logo.svg", alt="logo")
      
      .col-9 
        .inner-menu 
          ul 
            li 
              a(href="/") Trang Chủ
            li 
              a(href="/products") Sản Phẩm

            // Nếu chưa đăng nhập
            if !user
              li 
                a(href="/auth/login") Đăng nhập
              li 
                a(href="/auth/register") Đăng ký
            else
              li 
                span Xin chào, #{user.fullname}
              li 
                a(href="/auth/logout") Đăng xuất
